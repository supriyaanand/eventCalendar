<p id="notice"><%= notice %></p>

<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'View Calendar', calendar_path %></li>
  <li><%= link_to 'New reservation', new_reservation_path %></li>
</ul>

<table class="table">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Email</th>
      <th>Starttime</th>
      <th>Endtime</th>
      <th>Purpose</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.firstName %></td>
        <td><%= reservation.email %></td>
        <td><%= reservation.start_time %></td>
        <td><%= reservation.end_time %></td>
        <td><%= reservation.purpose %></td>
        <td><%= reservation.room.name %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>